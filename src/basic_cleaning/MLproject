name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Raw data
        type: raw_data

      output_artifact:
        description: Cleaned data
        type: cleaned_data

      output_description:
        description: Description of the cleaned data
        type: str
      
      min_price:
        description: Minimum rental price
        type: float
      
      max_price:
        description: Maximum rental price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact} \
          --output_description {output_description} --min_price {min_price} --max_price {max_price}
          